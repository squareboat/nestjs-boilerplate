{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["config/*"],
      "@libs/boat": ["libs/boat/src"],
      "@libs/boat/*": ["libs/boat/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
